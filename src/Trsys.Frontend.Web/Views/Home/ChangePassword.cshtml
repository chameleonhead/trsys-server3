@model Trsys.Frontend.Web.Models.Home.ChangePasswordViewModel

@{
    ViewData["Title"] = "パスワード変更";
}

<partial name="_Message" />

<h1 class="h2 mb-3">@ViewData["Title"]</h1>

<form method="post">
    <input style="display:none" type="text" value="@User.Identity.Name" autocomplete="username" />
    <div style="max-width: 40rem">
        <div class="mb-3">
            <label class="form-label">パスワード</label>
            <input class="form-control" type="password" name="NewPassword" value="@Model.NewPassword" autocomplete="new-password" />
        </div>
        <div class="mb-3">
            <label class="form-label">パスワード(確認用)</label>
            <input class="form-control" type="password" name="NewPasswordConfirm" value="@Model.NewPasswordConfirm" autocomplete="new-password" />
        </div>
        <div>
            <button class="btn btn-primary">変更</button>
        </div>
    </div>
</form>